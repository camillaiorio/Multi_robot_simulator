<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <environment>
        <grid_map resolution="0.05" width="20" height="20"/>
    </environment>

    <robots>
        <robot id="robot_1">
            <frame_id>robot_1_base</frame_id>
            <topics>
                <cmd_vel>/robot_1/cmd_vel</cmd_vel>
                <odom>/robot_1/odom</odom>
            </topics>
            <max_velocities linear="1.0" angular="1.0"/>
            
            <lidar id="lidar_1">
                <frame_id>lidar_1_frame</frame_id>
                <topics>
                    <scan>/robot_1/scan</scan>
                </topics>
                <num_beams>360</num_beams>
                <range min="0.1" max="10.0"/>
                <position x="0.0" y="0.0" z="0.2"/>
            </lidar>
        </robot>

        <robot id="robot_2">
            <frame_id>robot_2_base</frame_id>
            <topics>
                <cmd_vel>/robot_2/cmd_vel</cmd_vel>
                <odom>/robot_2/odom</odom>
            </topics>
            <max_velocities linear="1.2" angular="1.2"/>
            
            <lidar id="lidar_2">
                <frame_id>lidar_2_frame</frame_id>
                <topics>
                    <scan>/robot_2/scan</scan>
                </topics>
                <num_beams>180</num_beams>
                <range min="0.2" max="8.0"/>
                <position x="0.1" y="0.0" z="0.25"/>
            </lidar>
        </robot>
    </robots>
</simulation>
